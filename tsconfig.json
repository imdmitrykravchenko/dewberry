{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2021", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "noEmit": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}
